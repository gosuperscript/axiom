{
    "name": "gosuperscript/schema",
    "type": "library",
    "license": "UNLICENSED",
    "require-dev": {
        "infection/infection": "^0.29.14",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "robiningelbrecht/phpunit-coverage-tools": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Superscript\\Abacus\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Superscript\\Abacus\\Tests\\": "tests/"
        }
    },
    "require": {
        "azjezz/psl": "^3.2",
        "brick/math": "^0.12.0 || ^0.13.0",
        "gosuperscript/monads": "dev-main",
        "illuminate/container": "^11.0 || ^12.2",
        "illuminate/support": "^11.0 || ^12.2",
        "ext-intl": "*"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "test:types": "phpstan analyse",
        "test:unit": "phpunit --config phpunit.xml --coverage-clover=.phpunit/coverage.xml -d --min-coverage=100",
        "test:infection": "infection --threads=max --show-mutations",
        "test": [
            "@test:types",
            "@test:unit",
            "@test:infection"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
